<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  // Register ScrollTrigger plugin
  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', function() {
    // Animate stat numbers when they come into view
    const statNumbers = document.querySelectorAll('.stat-number[data-target], .stat-stars[data-target]');
    
    statNumbers.forEach(stat => {
      const element = stat as HTMLElement;
      const target = parseInt(element.dataset.target || '0');
      const suffix = element.dataset.suffix || '';
      const isStar = stat.classList.contains('stat-stars');
      
      // Set initial value
      if (isStar) {
        element.textContent = '0';
      } else {
        element.textContent = '0' + suffix;
      }
      
      // Create animation
      gsap.to(stat, {
        duration: 2,
        ease: "power2.out",
        scrollTrigger: {
          trigger: stat,
          start: "top 80%",
          once: true
        },
        onUpdate: function() {
          const currentValue = Math.floor(this.progress() * target);
          if (isStar) {
            element.textContent = currentValue.toString();
          } else {
            element.textContent = currentValue.toString() + suffix;
          }
        },
        onComplete: function() {
          if (isStar) {
            element.textContent = target.toString();
          } else {
            element.textContent = target.toString() + suffix;
          }
        }
      });
    });
  });
</script>

<style>
