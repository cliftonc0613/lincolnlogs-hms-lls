---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import HeroDefault from '../components/HeroDefault.astro';
import DefaultBreadcrumb from '../components/DefaultBreadcrumb.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="About Jeffery Lincoln | Upstate Home Remodel"
  description="Meet Jeffery Lincoln, the experienced owner and craftsman behind Upstate Home Remodel. Professional home improvement services throughout Upstate South Carolina."
  keywords="Jeffery Lincoln, home remodeling contractor, Upstate South Carolina, licensed contractor, experienced craftsman, home improvement professional"
>
  <Navigation />
  
  <main>
    <!-- ===== ABOUT HERO SECTION ===== -->
    <!-- Introduction to Jeffery Lincoln and professional overview -->
    <HeroDefault 
      title="About Jeffery Lincoln"
      subtitle="Owner & Master Craftsman"
      description="The experienced professional behind Upstate Home Remodel, dedicated to transforming homes throughout Upstate South Carolina with skilled craftsmanship and reliable service."
    />
    
    <!-- ===== BREADCRUMB NAVIGATION ===== -->
    <!-- Page navigation breadcrumb -->
    <DefaultBreadcrumb currentPage="About" />
    
    <!-- ===== EXPERIENCE & BACKGROUND SECTION ===== -->
    <!-- Professional credentials, expertise, and specialization areas -->
    <section class="about-experience-section section">
      <div class="container">
        <div class="grid grid--2">
          <div class="experience__content">
            <h2>Experience & Expertise</h2>
            <p>
              Meet Jeffery Lincoln, the experienced owner and craftsman behind Upstate Home Remodel. 
              With extensive experience in carpentry, plumbing, electrical work, and general remodeling, 
              Jeffery is committed to providing exceptional home improvement services that homeowners can trust.
            </p>
            <p>
              His attention to detail and skilled craftsmanship ensures every project is completed to the 
              highest standards, transforming houses into dream homes throughout Upstate South Carolina.
            </p>
            
            <div class="credentials">
              <h3>Professional Credentials</h3>
              <div class="credential-list">
                <div class="credential-item">
                  <span class="credential-icon">
                    <span class="material-icons">verified</span>
                  </span>
                  <span class="credential-text">Licensed Contractor</span>
                </div>
                <div class="credential-item">
                  <span class="credential-icon">
                    <span class="material-icons">security</span>
                  </span>
                  <span class="credential-text">Fully Insured</span>
                </div>
                <div class="credential-item">
                  <span class="credential-icon">
                    <span class="material-icons">emoji_events</span>
                  </span>
                  <span class="credential-text">Professional Service Standards</span>
                </div>
                <div class="credential-item">
                  <span class="credential-icon">
                    <span class="material-icons">location_on</span>
                  </span>
                  <span class="credential-text">Local Upstate SC Expert</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="specialties">
            <h3>Areas of Specialization</h3>
            
            <div class="specialty-grid">
              <div class="specialty-card">
                <div class="specialty-icon">
                  <span class="material-icons">build</span>
                </div>
                <h4>Carpentry</h4>
                <p>Custom cabinets, trim work, flooring, and built-in solutions</p>
              </div>
              
              <div class="specialty-card">
                <div class="specialty-icon">
                  <span class="material-icons">plumbing</span>
                </div>
                <h4>Plumbing</h4>
                <p>Bathroom and kitchen plumbing, fixtures, and emergency services</p>
              </div>
              
              <div class="specialty-card">
                <div class="specialty-icon">
                  <span class="material-icons">electrical_services</span>
                </div>
                <h4>Electrical</h4>
                <p>Panel upgrades, lighting, outlets, and code compliance work</p>
              </div>
              
              <div class="specialty-card">
                <div class="specialty-icon">
                  <span class="material-icons">home_repair_service</span>
                </div>
                <h4>General Remodel</h4>
                <p>Complete renovations, additions, and home transformations</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- ===== COMPANY VALUES SECTION ===== -->
    <!-- Core principles and values that guide every project -->
    <section class="about-values-section section" style="background: var(--light-gray);">
      <div class="container">
        <div class="text-center mb-xl">
          <h2>Our Company Values</h2>
          <p class="section-subtitle">The principles that guide every project we undertake</p>
        </div>
        
        <div class="grid why-choose-grid">
          <div class="feature-card">
            <div class="feature-card__icon">
              <span class="material-icons">star</span>
            </div>
            <h3 class="feature-card__title">Quality Workmanship</h3>
            <p>Every project is completed with meticulous attention to detail and the highest standards of craftsmanship, ensuring lasting results you can be proud of.</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-card__icon">
              <span class="material-icons">handshake</span>
            </div>
            <h3 class="feature-card__title">Reliability & Trust</h3>
            <p>Dependable service, clear communication, and honest pricing build the trust that forms the foundation of long-lasting customer relationships.</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-card__icon">
              <span class="material-icons">sentiment_satisfied</span>
            </div>
            <h3 class="feature-card__title">Customer Satisfaction</h3>
            <p>Your complete satisfaction is our top priority. We work closely with you to ensure your vision becomes reality, exceeding your expectations.</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-card__icon">
              <span class="material-icons">engineering</span>
            </div>
            <h3 class="feature-card__title">Professional Service</h3>
            <p>Licensed, insured, and committed to maintaining the highest professional standards in every aspect of our work and customer interactions.</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-card__icon">
              <span class="material-icons">home</span>
            </div>
            <h3 class="feature-card__title">Home Transformation</h3>
            <p>We understand that your home is your sanctuary. Our goal is to transform your space while respecting your lifestyle and budget.</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-card__icon">
              <span class="material-icons">support_agent</span>
            </div>
            <h3 class="feature-card__title">Responsive Communication</h3>
            <p>Clear, timely communication throughout every project ensures you're always informed and confident in our progress.</p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- ===== SERVICE AREA SECTION ===== -->
    <!-- Geographic coverage and local expertise with call-to-action -->
    <section class="about-service-area-section section">
      <div class="container text-center">
        <h2>Serving Upstate South Carolina</h2>
        <p class="service-area-description">
          Upstate Home Remodel proudly serves homeowners throughout Upstate South Carolina. 
          Our deep knowledge of local building codes, climate considerations, and architectural 
          styles ensures your project is perfectly suited to our region.
        </p>
        
        <div class="service-area-features">
          <div class="area-feature">
            <div class="area-icon">
              <span class="material-icons">location_city</span>
            </div>
            <h4>Local Expertise</h4>
            <p>Understanding of regional building requirements and styles</p>
          </div>
          
          <div class="area-feature">
            <div class="area-icon">
              <span class="material-icons">local_shipping</span>
            </div>
            <h4>Convenient Service</h4>
            <p>Reliable service throughout the Upstate South Carolina region</p>
          </div>
          
          <div class="area-feature">
            <div class="area-icon">
              <span class="material-icons">groups</span>
            </div>
            <h4>Community Focused</h4>
            <p>Supporting local homeowners and building lasting relationships</p>
          </div>
        </div>
        
        <div class="contact-cta">
          <h3>Ready to Start Your Project?</h3>
          <p>Contact Jeffery Lincoln today for a free consultation and estimate</p>
          <div class="cta-buttons">
            <a href="tel:+18646083326" class="btn btn--primary">Call (864) 608-3326</a>
            <a href="/contact" class="btn btn--gold">Get Free Estimate</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  /* ===== ABOUT PAGE STYLES ===== */
  
  .about-hero-section {
    padding: calc(80px + var(--space-xl)) 0 var(--space-2xl);
    background: linear-gradient(135deg, var(--light-gray) 0%, var(--white) 100%);
  }
  
  .about-hero__content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--accent-gold);
    font-weight: 600;
    margin-bottom: var(--space-lg);
  }
  
  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-primary);
  }
  
  .placeholder-image {
    aspect-ratio: 3/4;
    background: var(--light-gray);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px dashed var(--secondary-brown);
  }
  
  .placeholder-text {
    color: var(--text-light);
    text-align: center;
    font-weight: 600;
  }
  
  .credentials {
    margin-top: var(--space-xl);
    padding: var(--space-lg);
    background: var(--light-gray);
    border-radius: 10px;
  }
  
  .credentials h3 {
    color: var(--primary-brown);
    margin-bottom: var(--space-lg);
  }
  
  .credential-list {
    display: grid;
    gap: var(--space-md);
  }
  
  .credential-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }
  
  .credential-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .credential-icon .material-icons {
    font-size: 2rem !important;
    color: var(--accent-gold);
  }
  
  .credential-text {
    font-weight: 500;
    color: var(--text-primary);
  }
  
  .specialty-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
  }
  
  .specialty-card {
    background: var(--white);
    padding: var(--space-lg);
    border-radius: 10px;
    box-shadow: var(--shadow-sm);
    text-align: center;
    transition: all var(--transition-normal);
  }
  
  .specialty-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }
  
  .specialty-icon {
    margin-bottom: var(--space-md);
    display: flex;
    justify-content: center;
  }
  
  .specialty-icon .material-icons {
    font-size: 4rem !important;
    color: var(--secondary-brown);
  }
  
  .specialty-card h4 {
    color: var(--primary-brown);
    margin-bottom: var(--space-sm);
  }
  
  .specialty-card p {
    color: var(--text-light);
    font-size: 0.9rem;
    margin-bottom: 0;
  }
  
  /* Why Choose Us Section - matching homepage style */
  .why-choose-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .about-values-section .feature-card {
    background: var(--white);
    padding: var(--space-xl);
    border-radius: 12px;
    box-shadow: var(--shadow-sm);
    text-align: center;
    transition: all var(--transition-normal);
  }
  
  .about-values-section .feature-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-4px);
  }
  
  .about-values-section .feature-card .feature-card__icon {
    font-size: 4rem !important;
    margin-bottom: var(--space-lg);
    display: block;
    color: var(--secondary-brown) !important;
  }
  
  .about-values-section .feature-card .feature-card__icon .material-icons {
    font-size: 4rem !important;
    color: var(--secondary-brown) !important;
  }
  
  .about-values-section .feature-card__title {
    color: var(--primary-brown);
    margin-bottom: var(--space-md);
    font-size: 1.25rem;
  }
  
  .about-values-section .feature-card p {
    color: var(--text-primary);
    line-height: 1.6;
    margin-bottom: 0;
  }
  
  .service-area-description {
    font-size: 1.125rem;
    max-width: 700px;
    margin: 0 auto var(--space-xl);
    color: var(--text-primary);
    line-height: 1.7;
  }
  
  .service-area-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }
  
  .area-feature {
    text-align: center;
  }
  
  .area-icon {
    margin-bottom: var(--space-lg);
    display: flex;
    justify-content: center;
  }
  
  .area-icon .material-icons {
    font-size: 4rem !important;
    color: var(--secondary-brown);
  }
  
  .area-feature h4 {
    color: var(--primary-brown);
    margin-bottom: var(--space-md);
  }
  
  .contact-cta {
    background: var(--dark-gray-faded);
    padding: var(--space-2xl);
    border-radius: 15px;
  }
  
  .contact-cta h3 {
    color: var(--primary-brown);
    margin-bottom: var(--space-md);
  }
  
  .contact-cta p {
    margin-bottom: var(--space-xl);
    color: var(--text-primary);
  }
  
  .cta-buttons {
    display: flex;
    gap: var(--space-lg);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 768px) {
    .about-hero__content {
      grid-template-columns: 1fr;
      text-align: center;
    }
    
    .specialty-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 300px;
    }
    
    .about-values-section .feature-card,
    .specialty-card {
      padding: var(--space-lg);
    }
    
    .specialty-icon .material-icons,
    .about-values-section .feature-card .feature-card__icon .material-icons,
    .area-icon .material-icons {
      font-size: 4rem !important;
    }
    
    .why-choose-grid {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
    
    .credential-icon .material-icons {
      font-size: 2rem !important;
    }
  }
</style>