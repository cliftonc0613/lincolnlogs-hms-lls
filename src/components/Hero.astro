---
// Hero component for the home page
export interface Props {
  backgroundImage?: string;
  title?: string;
  subtitle?: string;
}

const { 
  backgroundImage = '/images/hero/kitchen-hero.jpg', 
  title = 'Upstate Home Remodel',
  subtitle = 'Your Trusted Home Improvement Professionals'
} = Astro.props;
---

<section class="hero">
  <img 
    src={backgroundImage} 
    alt="Professional home remodeling work by Upstate Home Remodel"
    class="hero__background"
    loading="eager"
  />
  <div class="hero__overlay"></div>
  
  <div class="hero__content">
    <h1 class="hero__title">{title}</h1>
    <p class="hero__subtitle">{subtitle}</p>
    
    <div class="hero__features">
      <div class="trust-badges">
        <div class="trust-badge">
          <span class="trust-badge__icon">
            <span class="material-icons">verified</span>
          </span>
          <span class="trust-badge__text">Licensed & Insured</span>
        </div>
        <div class="trust-badge">
          <span class="trust-badge__icon">
            <span class="material-icons">emoji_events</span>
          </span>
          <span class="trust-badge__text">Professional Service</span>
        </div>
        <div class="trust-badge">
          <span class="trust-badge__icon">
            <span class="material-icons">location_on</span>
          </span>
          <span class="trust-badge__text">Upstate South Carolina</span>
        </div>
      </div>
    </div>
    
    <div class="hero__cta">
      <a href="/contact" class="btn btn--gold">Get Free Estimate</a>
      <a href="tel:+18646083326" class="btn btn--outline">Call (864) 608-3326</a>
    </div>
  </div>
</section>

<style>
  .trust-badges {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    margin: var(--space-xl) 0;
    flex-wrap: wrap;
  }
  
  .trust-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: var(--white);
    min-width: 120px;
  }
  
  .trust-badge__icon {
    font-size: 2rem;
    margin-bottom: var(--space-sm);
    color: var(--accent-gold);
  }
  
  .trust-badge__text {
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0.9;
  }
  
  .btn--outline {
    background-color: rgba(255, 255, 255, 0.1);
    color: var(--white);
    border: 2px solid var(--white);
    backdrop-filter: blur(10px);
  }
  
  .btn--outline:hover {
    background-color: var(--white);
    color: var(--primary-brown);
  }
  
  @media (max-width: 768px) {
    .trust-badges {
      gap: var(--space-md);
    }
    
    .trust-badge {
      min-width: 100px;
    }
    
    .trust-badge__text {
      font-size: 0.8rem;
    }
  }
</style>