---
// Service Areas Component
// Displays service locations with icons and call-to-action
interface Props {
  title?: string;
  phoneNumber?: string;
  showCta?: boolean;
}

const { 
  title = "Service Areas",
  phoneNumber = "(864) 608-3326",
  showCta = true
} = Astro.props;
---

<section class="service-areas-section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    
    <!-- Service Areas Grid -->
    <div class="service-areas-grid">
      
      <!-- Greenville -->
      <div class="service-area-card">
        <div class="location-icon">
          <span class="material-icons">place</span>
        </div>
        <h3 class="location-name">Greenville</h3>
        <p class="location-detail">Downtown & Suburbs</p>
      </div>
      
      <!-- Spartanburg -->
      <div class="service-area-card">
        <div class="location-icon">
          <span class="material-icons">place</span>
        </div>
        <h3 class="location-name">Spartanburg</h3>
        <p class="location-detail">City & County</p>
      </div>
      
      <!-- Anderson -->
      <div class="service-area-card">
        <div class="location-icon">
          <span class="material-icons">place</span>
        </div>
        <h3 class="location-name">Anderson</h3>
        <p class="location-detail">City & Surrounding</p>
      </div>
      
      <!-- Easley -->
      <div class="service-area-card">
        <div class="location-icon">
          <span class="material-icons">place</span>
        </div>
        <h3 class="location-name">Easley</h3>
        <p class="location-detail">City & Vicinity</p>
      </div>
      
      <!-- Greer -->
      <div class="service-area-card">
        <div class="location-icon">
          <span class="material-icons">place</span>
        </div>
        <h3 class="location-name">Greer</h3>
        <p class="location-detail">City & Area</p>
      </div>
      
      <!-- Simpsonville -->
      <div class="service-area-card">
        <div class="location-icon">
          <span class="material-icons">place</span>
        </div>
        <h3 class="location-name">Simpsonville</h3>
        <p class="location-detail">City & Surrounds</p>
      </div>
      
    </div>
    
    <!-- Call to Action Card -->
    {showCta && (
      <div class="cta-card">
        <h3>Free Estimates Available</h3>
        <p>We travel to you for consultations and estimates</p>
        <div class="cta-phone">
          <span class="call-label">Call Today:</span>
          <a href={`tel:+1${phoneNumber.replace(/\D/g, '')}`} class="phone-link">{phoneNumber}</a>
        </div>
      </div>
    )}
    
  </div>
</section>

<style>
  .service-areas-section {
    padding: var(--space-2xl) 0;
    background: var(--white);
  }
  
  .section-title {
    text-align: center;
    color: var(--primary-brown);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    font-family: var(--font-primary);
    margin-bottom: var(--space-2xl);
  }
  
  .service-areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
    max-width: var(--container-max-width);
    margin-left: auto;
    margin-right: auto;
    padding: 0 var(--container-padding);
  }
  
  .service-area-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-xl);
  }
  
  .location-icon {
    width: 80px;
    height: 80px;
    background: rgba(230, 161, 46, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-lg);
  }
  
  .location-icon .material-icons {
    font-size: 2.5rem !important;
    color: var(--accent-gold);
  }
  
  .location-name {
    color: var(--primary-brown);
    font-family: var(--font-primary);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: var(--space-sm);
  }
  
  .location-detail {
    color: var(--text-light);
    font-size: 1.1rem;
    margin: 0;
  }
  
  .cta-card {
    background: rgba(230, 161, 46, 0.1);
    border: 1px solid rgba(230, 161, 46, 0.2);
    border-radius: 16px;
    padding: var(--space-2xl);
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    box-shadow: var(--shadow-sm);
  }
  
  .cta-card h3 {
    color: var(--primary-brown);
    font-family: var(--font-primary);
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: var(--space-md);
  }
  
  .cta-card p {
    color: var(--text-primary);
    font-size: 1.1rem;
    margin-bottom: var(--space-lg);
  }
  
  .cta-phone {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }
  
  .call-label {
    color: var(--text-primary);
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .phone-link {
    color: var(--accent-gold);
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    transition: color var(--transition-normal);
  }
  
  .phone-link:hover {
    color: var(--hover-gold);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .service-areas-section {
      padding: var(--space-xl) 0;
    }
    
    .section-title {
      margin-bottom: var(--space-xl);
    }
    
    .service-areas-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-lg);
      margin-bottom: var(--space-xl);
    }
    
    .service-area-card {
      padding: var(--space-lg);
    }
    
    .location-icon {
      width: 70px;
      height: 70px;
    }
    
    .location-icon .material-icons {
      font-size: 2rem !important;
    }
    
    .location-name {
      font-size: 1.25rem;
    }
    
    .location-detail {
      font-size: 1rem;
    }
    
    .cta-card {
      padding: var(--space-xl);
    }
    
    .cta-card h3 {
      font-size: 1.5rem;
    }
    
    .cta-phone {
      flex-direction: column;
      gap: var(--space-xs);
    }
  }
  
  @media (max-width: 480px) {
    .service-areas-grid {
      grid-template-columns: 1fr;
    }
    
    .location-icon {
      width: 60px;
      height: 60px;
    }
    
    .location-icon .material-icons {
      font-size: 1.75rem !important;
    }
  }
</style>