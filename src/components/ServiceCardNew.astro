---
export interface Props {
  iconName: string;
  title: string;
  description: string;
  href: string;
}

const { iconName, title, description, href } = Astro.props;
---

<div class="card-details">
  <div class="card-icons">
    <span class="material-icons">{iconName}</span>
  </div>
  <h3><a href={href}>{title}</a></h3>
  <p>{description}</p>
  <a class="read-more-btn" href={href}><span class="material-icons">arrow_forward_ios</span></a>
</div>

<style>
.card-details {
    width: 80%;
    margin: auto;
    position: relative;
    transition: .3s ease-in-out;
}
.card-details:before {
    content: "";
    width: 190px;
    height: 380px;
    background-color: var(--secondary-brown);
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) skew(-20deg, 0deg);
    z-index: -1;
    transition: .3s ease-in-out;
    opacity: 0.2;
}
.card-details:hover:before{
    background-color: var(--accent-gold);
}
.card-icons {
    width: 180px; /* Increased size */
    height: 180px; /* Increased size */
    position: relative;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;
}
.card-icons:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    border: 1px solid;
    width: 100%;
    height: 100%;
    transform: skew(-20deg, 0deg);
    background-color: var(--white);
    border-color: var(--accent-gold);
    transition: .3s ease-in-out;
}
.card-details:hover .card-icons:before{
    background-color: var(--accent-gold);
}
.card-icons .material-icons {
    font-size: 75px;
    color: var(--primary-brown);
    z-index: 1;
}
.card-details:hover .card-icons .material-icons {
    color: var(--white);
}
.card-details h3{
    margin-bottom: 15px;
    margin-top: 15px;
    font-weight: 700;
    font-size: 1.25rem;
    line-height: 1.2;
}
.card-details h3 a{
  color: var(--primary-brown);
  text-decoration: none;
}
.card-details p{
    font-size: 16px;
    line-height: 20px;
    color: var(--text-primary);
    font-weight: 400;
    margin-bottom: 15px;
}
.read-more-btn {
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid;
    border-radius: 100%;
    margin: auto;
    background-color: var(--white);
    transform: translateX(-10px);
    opacity: 0;
    visibility: hidden;
    border-color: var(--accent-gold);
    transition: .3s ease-in-out;
    text-decoration: none;
}
.read-more-btn .material-icons{
    color: var(--text-primary);
    font-size: 12px;
}
.card-details:hover .read-more-btn{
    transform: translateX(0);
    opacity: 1;
    visibility: visible;
}
</style>